/* Count the number of Occurrences of Each Word in a String array */

import java.io.*;

public class WordInString {
	static int Occurrences(String str, String word){
	 
	    String a[] = str.split(" ");
	    int count = 0;
	    for (int i = 0; i < a.length; i++)
	    {
	    
	       if (word.equals(a[i]))
	         count++;
	       }
	 
	    return count;
	}
	 
	public static void main(String args[]){
	    String str = "Hello Everyone! good morning, have a good day ";
	    String word = "good";
	    System.out.println(Occurrences(str, word));
	}
	
}
